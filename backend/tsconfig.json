{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*"],
      "@shared/*": ["../shared/*"],
    },
    "typeRoots": ["./src/types", "./node_modules/@types"]
  },
  "include": ["/**/*", "../shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
